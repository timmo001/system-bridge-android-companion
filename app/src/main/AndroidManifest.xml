<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.timmo.systembridge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SystemBridge"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.SettingsActivity"
            android:exported="true"
            android:label="@string/activity_settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EditConnectionActivity"
            android:exported="true" />
        <activity
            android:name=".activity.OpenInActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="@string/activity_open_url"
            android:theme="@style/Theme.SystemBridge.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>